@{
    ViewData["Title"] = $"{ViewBag.Entity}s Ajax Page";
}

@section Styles
{
    <link rel="stylesheet" href="/css/ajax.css" />
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Entity Ajax</h1>
</div>

<button type="button" id="NewEntityBtn" class="btn btn-primary" data-toggle="modal" data-target="#Modal">
    Create new
</button>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<pre id="json">
    Empty
</pre>

<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" id="ModalCloseBtn" class="close" data-dismiss="modal" aria-label="Close">x</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input class="form-control" type="text" id="Name"/>
                </div>
                @if (ViewBag.Entity == "Groups")
                {
                    <div class="form-group">
                        <label class="control-label">Teacher</label>
                        <select class="form-control" required id="TeacherIdList" type="text" name="TeacherId"></select>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" id="ModalSaveBtn" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="/js/ajax.js"></script>
    <script src="/js/ajax@(ViewBag.Entity).js"></script>
}